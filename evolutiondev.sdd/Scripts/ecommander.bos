Create()
{
	turn rf1 to y-axis <25> now;
	turn lf1 to y-axis <-25> now;
	turn rr1 to y-axis <-25> now;
	turn lr1 to y-axis <25> now;
	maxreloadtime=500;
	moving=FALSE;
	while(get BUILD_PERCENT_LEFT)
	{
		sleep 250;
	}
	start-script SmokeUnit();
	start-script DoTheWalking();
//	start-script Thrust();
	start-script buildflame();
}

