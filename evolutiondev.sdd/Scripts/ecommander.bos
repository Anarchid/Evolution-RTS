StartBuilding(heading, pitch)
{
   signal SIG_BUILD;
   set-signal-mask SIG_BUILD;
   turn door to x-axis <90> speed <150.000000>;
        wait-for-turn door around y-axis;
   turn base to y-axis heading speed <160.000000>;
        wait-for-turn base around y-axis;
   move penis to z-axis [2] speed [1];
   set INBUILDSTANCE to 1;
   building = 1;
   while (1) {
   emit-sfx 2048 from nanopoint1;
   sleep 30;
   }
}

StopBuilding()
{
   signal SIG_BUILD;
   set-signal-mask SIG_BUILD;
   set INBUILDSTANCE to 0;
   building = 0;
        move penis to z-axis [0] speed [2];
   turn door to x-axis <0> speed <100.000000>;
        wait-for-turn door around y-axis;
   turn base to y-axis <0.000000> speed <160.000000>;
        wait-for-turn base around y-axis;

}

